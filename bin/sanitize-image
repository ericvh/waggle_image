#!/bin/bash

PRINT_USAGE=0
MOUNT_POINT=''
while [[ $# -gt 0 ]]; do
  opt="$1"
  arg="$2"
  # echo "Key: $key"
  case $opt in
    --help)
      PRINT_USAGE=1
      ;;
      *)
        MOUNT_POINT="$opt"
      ;;
  esac
  shift
done

declare -r USAGE_MESSAGE="Usage: bless-stage3-image [--help] [-w|--disable-wvdial] [-a|--disable-apn] [-s|--enable-sudo] [-r|--disable-root-pass] [-c|--clean-up] [-k <key-path>|--key-path=<key-path>] <mount-point>"
if [ ${PRINT_USAGE} -eq 1 ]; then
  echo
  echo ${USAGE_MESSAGE}
  echo
  exit 0
fi

if [ "x${MOUNT_POINT}" == "x" ]; then
  echo
  echo "Error: no mount point specified"
  echo ${USAGE_MESSAGE}
  echo
  exit 1
fi

systemctl | grep waggle | awk '{print $1}' > ${MOUNT_POINT}/root/service_list.txt

cp /usr/lib/waggle/waggle_image/scripts/sanitize_image.sh ${MOUNT_POINT}/root/
chroot ${MOUNT_POINT} /root/sanitize_image.sh
